# .zshrc

## simple prompt
autoload -Uz vcs_info
precmd() { vcs_info }
zstyle ':vcs_info:git:*' formats '%b '
setopt PROMPT_SUBST
PROMPT='%F{green}îªœ %F{blue}%1~%f %F{red}${vcs_info_msg_0_}%f$ '

# enable for custom prompt completions.
autoload -U compinit
compinit

source ~/.zsh_env_vars

if [ -f ~/.zshrc_work ]; then
	source ~/.zshrc_work
fi

# Fix TERM for ssh sessions
alias ssh='TERM=xterm-color ssh'

# basic alias
alias v="nvim"
alias vim="nvim"
alias t="tmux"
alias ta="tmux attach"
alias c="clear"
alias lg="lazygit"
alias sz="source ~/.zshrc"
alias ..="cd .."
alias la="ls -la"
alias ll="ls -l"

# Misc alias
alias rfz="~/scripts/rfz.sh"
alias fr="cd \$(find * -type d | fzf)"
alias fd="cd \$(find * -type d -maxdepth 0 | fzf)"

